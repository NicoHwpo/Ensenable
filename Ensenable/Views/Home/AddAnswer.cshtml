@model Ensenable.Models.AnswerModel

@{
    ViewData["Title"] = "AddAnswer";
}

<h1>AddAnswer</h1>

<h4>AnswerModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAnswer" asp-controller="Home" method="post">
            
            <div class="form-group">
                <label asp-for="IdQuestion" class="control-label"></label>
                <input asp-for="IdQuestion" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Answer" class="control-label"></label>
                <input asp-for="Answer" class="form-control" />
            </div>
            <div class="form-group">
                <div class="row">
                    <p>Esta respuesta es correcta?</p>
                    <div class="col">
                        <input asp-for="IsCorrect" type="radio" name="iscorrect" id="true" value="true" required />
                        <label class="form-label" for="true">Correcta</label>
                    </div>
                    <div class="col">
                        <input asp-for="IsCorrect" type="radio" name="iscorrect" id="false" value="false" checked />
                        <label class="form-label" for="false">Incorrecta</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="NumAnswer" class="control-label"></label>
                <input asp-for="NumAnswer" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
